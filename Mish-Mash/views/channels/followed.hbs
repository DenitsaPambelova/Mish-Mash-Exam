<h1 class="text-center text-mishmash">Following</h1>
{{#if user.followedChannels}}
<hr class="hr-2 bg-mishmash" />
<table class="table w-75 mx-auto table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-5">Channel</th>
            <th class="col-md-1">Type</th>
            <th class="col-md-2">Followers</th>
            <th class="col-md-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each user.followedChannels}}
        <tr class="row">
            <th class="col-md-1">1</th>
            <td class="col-md-5">{{this.name}}</td>
            <td class="col-md-1">{{this.type}}</td>
            <td class="col-md-2">{{this.followers.length}}</td>
            <td class="col-md-2">
                <div class="button-holder d-flex justify-content-between">
                    <form id="unfollow-form-{{this._id}}" action="/unfollow" method="post">
                        <input name="unfollowId" type="text" value="{{this._id}}" style="display: none" />
                    </form>
                    <a href="javascript:document.getElementById('unfollow-form-{{this._id}}').submit()"><button class="btn bg-mishmash text-white">Unfollow</button></a>
                    
                    <a href="/channels/details/{{this._id}}"><button class="btn bg-mishmash text-white">Details</button></a>

                </div>
            </td>
        </tr>
        {{/each}}        
    </tbody>
</table>
{{else}}
<div>No channels</div>
{{/if}}